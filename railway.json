{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash build.sh",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "aptPkgs": ["$(cat apt.txt)"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd core && gunicorn voting_system.wsgi --log-file -",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
